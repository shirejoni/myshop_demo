                                                        <label class="col-sm-2 control-label text-center">نام</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" placeholder="{{ Language['name'] }}" class="form-control" id="product-name-{{ Language['language_id'] }}">
                                                        </div>
                                                    </div>

