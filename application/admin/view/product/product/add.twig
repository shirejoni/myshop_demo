                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#image" role="tab" aria-controls="image" aria-selected="true">عکس</a>
                                </li>
                            </ul>

                            <div class="tab-content text-right" id="mainTabContent">
                                {#
                                    General Tab
