                        <div class="reviews">
                        {% for Review in Product['reviews'] %}
                            <div class="review">
                                <div class="review-author">
                                    {{ Review['author'] }}
                                </div>
                                <div class="review-rate">
                                    <div class="rating-stars text-center" data-review-value="{{ Review['rate'] }}">
