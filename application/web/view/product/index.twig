                        <input type="number" id="product-quantity" class="product-quantity" value="{{ Product['minimum'] }}">
                    </div>
                    <div id="add-to-cart">
                        <i class="fa fa-shopping-cart"></i>
                        <span>
                             افزودن به سبد خرید
                        </span>
                    </div>
                </div>
            </div>

