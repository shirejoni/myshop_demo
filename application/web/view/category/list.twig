{% extends "product/_temp/blank_product_temp.twig" %}

{% block BreadCrump %}

    {% include "_inc/_breadcrump_inc.twig" %}
{% endblock %}
{% block Content %}
    <div id="products-list">
        <div class="bigWrap clearfix">
            <div class="products-list-sidebar">
                <h3>فیلتر ها</h3>
                {% if Manufacturers %}
                <div class="category-filter-group-box">
                    <div class="category-filter-group-title-box">
                        تولیدکننده:
                    </div>
                    {% for Manufacturer in Manufacturers %}
                        <div class="category-filter-item">
                            <input type="checkbox" id="cbx-manufacturer-{{ Manufacturer['manufacturer_id'] }}" class="cbx" data-filter-type="manufacturer" data-filter-id="{{ Manufacturer['manufacturer_id'] }}" style="display: none;">
                            <label for="cbx-manufacturer-{{ Manufacturer['manufacturer_id'] }}" class="check">
                                <svg width="18px" height="18px" viewBox="0 0 18 18">
                                    <path d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z"></path>
                                    <polyline points="1 9 7 14 15 4"></polyline>
                                </svg>
                            </label>
                            <span> {{ Manufacturer['name'] }}</span>
                        </div>
                    {% endfor %}
                </div>
                {% endif %}
                {% if CategoryFilters %}
                    {% for CategoryFilter in CategoryFilters %}
                        <div class="category-filter-group-box">
                            <div class="category-filter-group-title-box">
                                {{ CategoryFilter['name'] }}
                            </div>
                            {% for Filter in CategoryFilter['filter_items'] %}
                                <div class="category-filter-item">
                                    <input type="checkbox" id="cbx-{{ Filter['filter_id'] }}" class="cbx" data-filter-type="filter" data-filter-id="{{ Filter['filter_id'] }}" style="display: none;">
                                    <label for="cbx-{{ Filter['filter_id'] }}" class="check">
                                        <svg width="18px" height="18px" viewBox="0 0 18 18">
                                            <path d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z"></path>
                                            <polyline points="1 9 7 14 15 4"></polyline>
                                        </svg>
                                    </label>
                                    <span> {{ Filter['name'] }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}

                {% endif %}
            </div>
            <div class="products-list-box">
                {% if Products %}
                    {% for Product in Products %}
                        <div class="product-item-box">
                            <a href="{{ URL }}product/{{ Product['product_id'] }}">
                                <div class="product-item-image-box">
                                    <img src="{{ Product['image'] }}" alt="Product Title">
                                </div>
                                <div class="product-item-content-box">
                                    <a href="{{ URL }}product/{{ Product['product_id'] }}">{{ Product['name'] }}</a>
                                    <div class="product--price">
                                        {% if Product['special'] %}
                                            <span class="old">{{ Product['price'] }}</span>
                                            <span class="new">{{ Product['special'] }}</span>
                                            <span class="unit">تومان</span>
                                        {% else %}
                                            <span>{{ Product['price'] }}</span>
                                            <span class="unit">تومان</span>
                                        {% endif %}

                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                {% endif %}


            </div>
        </div>
    </div>
{% endblock %}